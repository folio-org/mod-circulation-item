{
  "id": "@artifactId@-@version@",
  "name": "Circulation Item API module",
  "requires": [
    {
      "id": "login",
      "version": "7.3"
    },
    {
      "id": "permissions",
      "version": "5.6"
    }
  ],
  "provides": [
    {
      "id": "circulation-item",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/circulation-item/{itemId}",
          "permissionsRequired": ["circulation-item.item.post"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/circulation-item/{itemId}",
          "permissionsRequired": ["circulation-item.item.put"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/circulation-item",
          "permissionsRequired": ["circulation-item.fetch-by-barcode.get"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/circulation-item/items",
          "permissionsRequired": ["circulation-item.items.collection.get"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/circulation-item/{itemId}",
          "permissionsRequired": ["circulation-item.fetch-by-id.get"]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant",
          "modulePermissions": [ ]
        }, {
          "methods": ["GET", "DELETE"],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "circulation-item.items.collection.get",
      "displayName": "circulation item - fetch circulation item collection",
      "description": "fetch circulation item collection"
    },
    {
      "permissionName": "circulation-item.fetch-by-id.get",
      "displayName": "circulation item - fetch circulation item by id",
      "description": "fetch circulation item by id"
    },
    {
      "permissionName": "circulation-item.item.post",
      "displayName": "create circulation item",
      "description": "create circulation item"
    },
    {
      "permissionName": "circulation-item.item.put",
      "displayName": "update circulation item",
      "description": "update circulation item"
    },
    {
      "permissionName": "circulation-item.fetch-by-barcode.get",
      "displayName": "circulation item - fetch circulation item by barcode",
      "description": "fetch circulation item by barcode"
    }
  ],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 712673984,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=75.0"
      },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      {
        "name": "OKAPI_URL",
        "value": "http://okapi:9130"
      },
      {
        "name": "ENV",
        "value": "folio"
      }
    ]
  }
}
